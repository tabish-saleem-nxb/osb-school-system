#grades_holder.quick_create_wrapper style=("display: none;")
  = render 'grades/new_grade'

.invoice
  .content_top
    .primary_heading
      h1
        = t('header.links.invoices.bulk_operations')
  .content_bottom
    = button_tag t('views.invoices.edit_all_invoices'), class: 'btn_large submit pull-left', id: 'edit_all_invoices'

  #bulk_operations.content_middle.hidden-form
    = form_tag(perform_bulk_operations_invoices_path, id: 'bulk_operations_form') do |f|

      .content_bottom
        .primary_heading
          h1
            = t('views.invoices.perform_bulk_operations_for_all_invoices')

      .field_row.description

        .small_field.right
          .label_field.left.single.left-margin
            = t('header.links.bulk_operations')
          .left.single.left-margin
            = select_tag :operation, options_for_select(BULK_OPERATIONS),
                           include_blank: t('views.invoices.select_operation'),
                           id: 'select_bulk_operation',
                           class: 'invoice_client medium chzn-select remove-add-new'

        .small_field.right
          .label_field.left.single.left-margin
            = t('header.links.items.items')
          .left.single.left-margin
            = select_tag :items_ids, options_for_select(Item.all.collect{|item| [item.item_name, item.id]}), multiple: true, include_blank: t('views.invoices.select_item'), id: 'bulk_operations_item', class: 'chzn-select remove-add-new'

        .small_field.right
          .label_field.left.single.left-margin
            = t('header.links.grades.grades')
          .left.single.left-margin
            = select_tag :grades_ids, options_for_select(Grade.all.collect{|grade| [grade.title, grade.id]}), multiple: true,
                    include_blank: t('views.invoices.select_grade'), id: 'bulk_operations_grade', class: 'invoice_client medium chzn-select',
              'data-form-container' => 'grades_holder'

      .content_bottom
        br
        br
        br
        = submit_tag t('views.invoices.perform_operation'), class: 'btn_large submit'
