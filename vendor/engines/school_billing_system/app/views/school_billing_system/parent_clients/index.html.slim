/= link_to 'New Parent client', new_parent_client_path

- model_class = ParentClient
#sort_direction style="display: none;"
  = params[:direction]
= hidden_field_tag :direction, params[:direction]
= hidden_field_tag :sort, params[:sort]
.parent_clients
  .content_top
    .primary_heading
      h1
        = t '.title', default: t("parents")
        span
          | &nbsp;/&nbsp;
          = t('views.common.active')
    .primary_btn
      = link_to (content_tag(:span, t("header.links.parent_clients.new"))), new_parent_client_path, class: 'btn_large'
  /! content_top
  /= form_tag 'parent_clients/bulk_actions', {method: :get, :remote => true} do
  .content_middle
    .grid_control
      .grid_control_left
        ul#bulk_actions value=("= model_class.model_name")
          /= render 'bulk_actions'
      #active_links.grid_control_right
        /= render 'clients/filter_links'
    /! grid_control
    .grid_table
      table.table.table_listing.parent_client_listing cellpadding="0" cellspacing="0" class=I18n.locale
        colgroup
          col.one
          col.two
          col.three
          col.four
          col.five
          col.six
          col.seven
        thead#client_head
          = render 'parent_client_header'
        tbody#client_body
          = render 'parent_clients'
        tfoot#paging_links
          /= render 'application_partials/paging'
  /! grid_table
  /! content_middle
  .content_bottom
    = link_to (content_tag(:span, t('header.links.parent_clients.new'))), new_parent_client_path, class: 'btn_large'
  /! content_bottom
/! clients

/= render 'payments/unpaid_invoices'