<div class="tiny_form_container">
  <div id="create_client" class="tiny_create_form">
    <% type = params[:type] %>
    <div class="tiny_form_inner">
      <%= hidden_field_tag 'type', type %>

      <div class="tiny_form_top">
        <div class="tiny_form_heading"><h4><%= t('header.links.students.new') %></h4></div>
        <div class="close_btn"><%= link_to 'x', 'javascript:' %></div>
      </div>
      <!--tiny_form_top-->

      <div class="tiny_form_middle">

        <div class="fields_content_data">

          <div class="field_row">
            <div class="label_field left single"><%= t("views.#{type}s.organization_name") %></div>
            <div class="small_field">
              <%= text_field_tag "client[organization_name]", '' %>
            </div>
          </div>
          <!--field_row-->

          <div class="field_row">
            <div class="label_field left single"><span><%= t('views.common.email') %></span></div>
            <div class="small_field">
              <%= text_field_tag "client[email]", '', :required => '' %>
            </div>
          </div>
          <!--field_row-->

          <div class="field_row">
            <div class="label_field left single"><%= t("views.#{type}s.first_name") %></div>
            <div class="small_field">
              <%= text_field_tag "client[first_name]", '', :required => true %>
            </div>
          </div>
          <!--field_row-->

          <div class="field_row">
            <div class="label_field left single"><%= t("views.#{type}s.last_name") %></div>
            <div class="small_field">
              <%= text_field_tag "client[last_name]", '', :required => true %>
            </div>
          </div>
          <!--field_row-->

          <div class="field_row">
            <div class="label_field left"><%= t("views.#{type}s.business_phone") %></div>
            <div class="small_field">
              <%= text_field_tag "client[business_phone]", '' %>
              <%= hidden_field_tag :quick_create %>
              <%#= hidden_field_tag :association, 'account' %>
            </div>
          </div>
          <%= hidden_field_tag "client[parent_client_id]", 0 %>
          <!--field_row-->


          <div id="clientModal" class="client-modal">
            <div class="cross_btn">
              <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                <%= image_tag "cross.png", :size => "7x7", :alt => "" %>
              </button>
            </div>
          </div>
        </div>
        <!--fields_content_data-->
      </div>
      <!--tiny_form_middle-->

      <div class="tiny_form_btm">
        <%= button_tag 'save', :name => "save", :class => "btn_large tiny_btn btn_save" %>
        <%= button_tag 'save & add more', :name => "add_more", :class => "btn_large tiny_btn btn_save_and_add_more" %>
      </div>
      <!--tiny_form_btm-->


    </div>
    <!--tiny_form_inner-->
  </div>
  <!--tiny_create_form-->
</div><!--tiny_form_container-->

